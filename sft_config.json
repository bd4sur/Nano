{
    "block_size": 256,
    "vocab_size": 10000,
    "n_layer": 6,
    "n_head": 8,
    "n_embd": 512,
    "dropout": 0.2,
    "bias": false,
    "norm_eps": 1e-5,
    "is_causal": true,

    "learning_rate": 1e-6,
    "max_iters": 100000,
    "weight_decay": 1e-1,
    "beta1": 0.9,
    "beta2": 0.99,

    "decay_lr": false,
    "warmup_iters": 300,
    "lr_decay_iters": 100000,
    "min_lr": 1e-8,

    "init_from": "pretrain",
    "batch_size": 20,
    "random_seed": 39,
    "train_dataset_path": "dataset/sft_train.base64",
    "val_dataset_path": "dataset/sft_val.base64",
    "tokenizer_path": "dataset/tokenizer.json",
    "checkpoint_path": "checkpoint",
    "eval_interval": 10,
    "log_interval": 1,
    "eval_iters": 5,

    "backend": "nccl",
    "device": "cuda",
    "sdp_kernel": "flash",
    "dtype": "bfloat16",
    "grad_clip": 1.0,
    "gradient_accumulation_steps": 4
}
