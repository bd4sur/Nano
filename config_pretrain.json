{
    "from_checkpoint": "",
    "dataset_path": [
        ["dataset_preprocessed/pt_train_0.base64", "dataset_preprocessed/pt_val_0.base64"]
    ],
    "tokenizer_path": "tokenizer/tokenizer_16384.json",

    "random_seed": 39,
    "batch_size": 128,

    "dropout": 0.0,

    "learning_rate": 6e-4,
    "weight_decay": 1e-1,
    "beta1": 0.9,
    "beta2": 0.99,

    "decay_lr": true,
    "warmup_iters": 1000,
    "lr_decay_iters": 1e9,
    "min_lr": 6e-5,

    "eval_interval": 100,
    "log_interval": 10,
    "eval_iters": 5,

    "backend": "nccl",
    "device": "cuda",
    "sdp_kernel": "flash",
    "dtype": "bfloat16",
    "grad_clip": 1.0,
    "gradient_accumulation_steps": 4
}
