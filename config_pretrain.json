{
    "from_checkpoint": "",
    "train_dataset_path": "dataset/pretrain_train.base64",
    "val_dataset_path": "dataset/pretrain_val.base64",
    "tokenizer_path": "dataset/tokenizer.json",

    "random_seed": 39,
    "batch_size": 100,

    "dropout": 0.0,

    "learning_rate": 6e-4,
    "weight_decay": 1e-1,
    "beta1": 0.9,
    "beta2": 0.99,

    "decay_lr": true,
    "warmup_iters": 300,
    "lr_decay_iters": 100000,
    "min_lr": 6e-5,

    "eval_interval": 100,
    "log_interval": 1,
    "eval_iters": 5,

    "backend": "nccl",
    "device": "cuda",
    "sdp_kernel": "flash",
    "dtype": "bfloat16",
    "grad_clip": 1.0,
    "gradient_accumulation_steps": 4
}
