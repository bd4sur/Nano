{
    "block_size": 512,
    "vocab_size": 10000,
    "n_layer": 4,
    "n_head": 4,
    "n_embd": 512,
    "dropout": 0.0,
    "bias": false,
    "is_causal": true,

    "learning_rate": 6e-4,
    "max_iters": 100000,
    "weight_decay": 1e-1,
    "beta1": 0.9,
    "beta2": 0.99,

    "decay_lr": true,
    "warmup_iters": 300,
    "lr_decay_iters": 100000,
    "min_lr": 6e-5,

    "init_from": "pretrain",
    "batch_size": 320,
    "random_seed": 114514,
    "eval_only_last_token_loss": false,
    "data_dir": "dataset",
    "ckpt_dir": "checkpoint",
    "eval_interval": 100,
    "log_interval": 10,
    "eval_iters": 5,

    "backend": "nccl",
    "device": "cuda:0",
    "sdp_kernel": "math",
    "dtype": "float16",
    "grad_clip": 1.0,
    "gradient_accumulation_steps": 4
}
