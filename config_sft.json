{
    "from_checkpoint": "checkpoint/ckpt.pt",
    "dataset_path": [
        ["dataset_preprocessed/sft_train.base64", "dataset_preprocessed/sft_val.base64"]
    ],
    "tokenizer_path": "tokenizer/tokenizer_16384.json",

    "random_seed": 39,
    "batch_size": 128,

    "dropout": 0.1,

    "learning_rate": 1e-6,
    "weight_decay": 1e-1,
    "beta1": 0.9,
    "beta2": 0.99,

    "decay_lr": false,
    "warmup_iters": 1000,
    "lr_decay_iters": 1e9,
    "min_lr": 1e-8,

    "eval_interval": 100,
    "log_interval": 1,
    "eval_iters": 5,

    "backend": "nccl",
    "device": "cuda",
    "sdp_kernel": "flash",
    "dtype": "bfloat16",
    "grad_clip": 1.0,
    "gradient_accumulation_steps": 4
}
